    <!-- JavaScript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // ==================== Data Storage ====================
        class EcoSmartData {
            constructor() {
                this.loadFromLocalStorage();
                this.initializeCounters();
            }
            
            loadFromLocalStorage() {
                this.counters = JSON.parse(localStorage.getItem('ecosmart_counters')) || {
                    bottles: 125847,
                    donations: 8423,
                    co2: 324.5,
                    users: 8423,
                    activeUsers: 157,
                    foodDonations: 1250,
                    eduDonations: 890,
                    medicalDonations: 670,
                    todayDonations: 47,
                    weekDonations: 324
                };
                
                this.activities = JSON.parse(localStorage.getItem('ecosmart_activities')) || [];
                this.donations = JSON.parse(localStorage.getItem('ecosmart_donations')) || [];
                this.messages = JSON.parse(localStorage.getItem('ecosmart_messages')) || [];
            }
            
            saveToLocalStorage() {
                localStorage.setItem('ecosmart_counters', JSON.stringify(this.counters));
                localStorage.setItem('ecosmart_activities', JSON.stringify(this.activities));
                localStorage.setItem('ecosmart_donations', JSON.stringify(this.donations));
                localStorage.setItem('ecosmart_messages', JSON.stringify(this.messages));
            }
            
            initializeCounters() {
                // Set current year in footer
                document.getElementById('currentYear').textContent = new Date().getFullYear();
                
                // Update counter display
                this.updateAllCounters();
                
                // Load activities
                this.displayActivities();
                
                // Start real-time updates
                this.startRealTimeUpdates();
            }
            
            updateAllCounters() {
                // Update hero stats
                document.getElementById('totalBottles').textContent = this.formatNumber(this.counters.bottles);
                document.getElementById('totalDonations').textContent = this.formatNumber(this.counters.donations);
                document.getElementById('totalPoints').textContent = this.formatNumber(this.counters.bottles * 10);
                
                // Update counter section
                this.animateCounter('counterBottles', this.counters.bottles);
                this.animateCounter('counterDonations', this.counters.donations);
                this.animateCounter('counterCO2', this.counters.co2);
                this.animateCounter('counterUsers', this.counters.users);
                
                // Update active users
                document.getElementById('activeUsers').textContent = this.counters.activeUsers;
                
                // Update donation stats
                document.getElementById('foodDonations').textContent = this.counters.foodDonations;
                document.getElementById('eduDonations').textContent = this.counters.eduDonations;
                document.getElementById('medicalDonations').textContent = this.counters.medicalDonations;
                document.getElementById('todayDonations').textContent = this.counters.todayDonations;
                document.getElementById('weekDonations').textContent = this.counters.weekDonations;
                
                // Update machine display
                document.getElementById('machinePoints').textContent = `+${Math.floor(this.counters.bottles / 1000) * 10}`;
                document.getElementById('machineDonations').textContent = Math.floor(this.counters.donations / 1000);
                
                // Update progress bars
                setTimeout(() => {
                    const bottlesPercent = Math.min(85, (this.counters.bottles / 150000) * 100);
                    const donationsPercent = Math.min(45, (this.counters.donations / 10000) * 100);
                    const co2Percent = Math.min(70, (this.counters.co2 / 500) * 100);
                    const usersPercent = Math.min(60, (this.counters.users / 10000) * 100);
                    
                    document.getElementById('progressBottles').style.width = `${bottlesPercent}%`;
                    document.getElementById('progressDonations').style.width = `${donationsPercent}%`;
                    document.getElementById('progressCO2').style.width = `${co2Percent}%`;
                    document.getElementById('progressUsers').style.width = `${usersPercent}%`;
                }, 1000);
            }
            
            formatNumber(num) {
                return num.toLocaleString('ar-EG');
            }
            
            animateCounter(elementId, finalValue) {
                const element = document.getElementById(elementId);
                const current = parseInt(element.textContent.replace(/,/g, '')) || 0;
                const diff = finalValue - current;
                
                if (diff === 0) {
                    element.textContent = this.formatNumber(finalValue);
                    return;
                }
                
                const duration = 1000;
                const steps = 60;
                const increment = diff / steps;
                let currentValue = current;
                
                const timer = setInterval(() => {
                    currentValue += increment;
                    if ((increment > 0 && currentValue >= finalValue) || 
                        (increment < 0 && currentValue <= finalValue)) {
                        element.textContent = this.formatNumber(finalValue);
                        clearInterval(timer);
                    } else {
                        element.textContent = this.formatNumber(Math.floor(currentValue));
                    }
                }, duration / steps);
            }
            
            addBottles(count, isDonation = false) {
                this.counters.bottles += count;
                
                if (isDonation) {
                    this.counters.donations += count;
                    
                    // Update CO2 saved (0.0025 tons per bottle)
                    this.counters.co2 += count * 0.0025;
                    
                    // Update daily/weekly stats
                    this.counters.todayDonations += count;
                    this.counters.weekDonations += count;
                    
                    // Add activity
                    this.addActivity({
                        type: 'donate',
                        text: `تبرع جديد بـ ${count} زجاجة`,
                        time: new Date().toLocaleTimeString('ar-EG')
                    });
                    
                    // Update machine status
                    this.updateMachineStatus(`جارٍ معالجة تبرع بـ ${count} زجاجة...`);
                } else {
                    // Add activity
                    this.addActivity({
                        type: 'recycle',
                        text: `إضافة ${count} زجاجة للتدوير`,
                        time: new Date().toLocaleTimeString('ar-EG')
                    });
                    
                    // Update machine status
                    this.updateMachineStatus(`جارٍ معالجة ${count} زجاجة...`);
                }
                
                // Update active users randomly
                this.counters.activeUsers = Math.floor(Math.random() * 50) + 140;
                
                this.updateAllCounters();
                this.saveToLocalStorage();
                
                return true;
            }
            
            addActivity(activity) {
                activity.id = Date.now();
                this.activities.unshift(activity);
                
                // Keep only last 20 activities
                if (this.activities.length > 20) {
                    this.activities = this.activities.slice(0, 20);
                }
                
                this.displayActivities();
                this.saveToLocalStorage();
            }
            
            displayActivities() {
                const feed = document.getElementById('activityFeed');
                if (!feed) return;
                
                feed.innerHTML = '';
                
                this.activities.forEach(activity => {
                    const activityItem = document.createElement('div');
                    activityItem.className = 'activity-item';
                    
                    const iconClass = activity.type === 'donate' ? 'donate' : 'recycle';
                    const icon = activity.type === 'donate' ? 'fa-heart' : 'fa-recycle';
                    
                    activityItem.innerHTML = `
                        <div class="activity-icon ${iconClass}">
                            <i class="fas ${icon}"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-text">${activity.text}</div>
                            <div class="activity-time">${activity.time}</div>
                        </div>
                    `;
                    
                    feed.appendChild(activityItem);
                });
            }
            
            clearActivities() {
                this.activities = [];
                this.displayActivities();
                this.saveToLocalStorage();
            }
            
            updateMachineStatus(message) {
                const statusElement = document.getElementById('machineStatus');
                if (statusElement) {
                    statusElement.textContent = message;
                    
                    // Reset after 3 seconds
                    setTimeout(() => {
                        statusElement.textContent = 'جاهز للعمل...';
                    }, 3000);
                }
            }
            
            startRealTimeUpdates() {
                // Update last update time
                setInterval(() => {
                    const lastUpdate = parseInt(localStorage.getItem('lastUpdateTime') || '0');
                    const now = Math.floor(Date.now() / 1000);
                    const diff = now - lastUpdate;
                    document.getElementById('lastUpdate').textContent = diff;
                }, 1000);
                
                // Simulate occasional updates
                setInterval(() => {
                    if (Math.random() > 0.7) {
                        const randomBottles = Math.floor(Math.random() * 3) + 1;
                        const isDonation = Math.random() > 0.5;
                        this.addBottles(randomBottles, isDonation);
                    }
                }, 10000);
            }
        }

        // ==================== DOM Initialization ====================
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize AOS
            AOS.init({ duration: 1000, once: true, offset: 100 });
            
            // Initialize data manager
            const ecoSmart = new EcoSmartData();
            
            // ==================== Navbar Functions ====================
            // Scroll effect
            window.addEventListener('scroll', () => {
                const navbar = document.getElementById('navbar');
                const backToTop = document.getElementById('backToTop');
                
                if (window.scrollY > 100) {
                    navbar.classList.add('scrolled');
                    backToTop.classList.add('visible');
                } else {
                    navbar.classList.remove('scrolled');
                    backToTop.classList.remove('visible');
                }
            });
            
            // Mobile menu toggle
            document.getElementById('mobileToggle').addEventListener('click', function() {
                const navMenu = document.getElementById('navMenu');
                navMenu.classList.toggle('active');
                this.innerHTML = this.innerHTML.includes('bars') ? 
                    '<i class="fas fa-times"></i>' : 
                    '<i class="fas fa-bars"></i>';
            });
            
            // Close mobile menu when clicking a link
            document.querySelectorAll('.nav-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    document.getElementById('navMenu').classList.remove('active');
                    document.getElementById('mobileToggle').innerHTML = '<i class="fas fa-bars"></i>';
                });
            });
            
            // Smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // ==================== Button Functions ====================
            // Add bottles button
            document.getElementById('addBottlesBtn').addEventListener('click', () => {
                const count = Math.floor(Math.random() * 10) + 1;
                ecoSmart.addBottles(count, false);
                
                // Show notification
                showNotification(`تم إضافة ${count} زجاجة للتدوير!`, 'success');
            });
            
            // Simulate activity button
            document.getElementById('simulateBtn').addEventListener('click', () => {
                const activities = [
                    { count: 5, isDonation: false },
                    { count: 3, isDonation: true },
                    { count: 7, isDonation: false },
                    { count: 2, isDonation: true },
                    { count: 4, isDonation: false }
                ];
                
                let total = 0;
                activities.forEach((activity, index) => {
                    setTimeout(() => {
                        ecoSmart.addBottles(activity.count, activity.isDonation);
                        total += activity.count;
                        
                        if (index === activities.length - 1) {
                            showNotification(`تم محاكاة ${total} نشاط بنجاح!`, 'success');
                        }
                    }, index * 500);
                });
            });
            
            // Reset counters button
            document.getElementById('resetCountersBtn').addEventListener('click', () => {
                if (confirm('هل أنت متأكد من إعادة تعيين جميع العدادات؟')) {
                    ecoSmart.counters = {
                        bottles: 0,
                        donations: 0,
                        co2: 0,
                        users: 0,
                        activeUsers: 0,
                        foodDonations: 0,
                        eduDonations: 0,
                        medicalDonations: 0,
                        todayDonations: 0,
                        weekDonations: 0
                    };
                    
                    ecoSmart.updateAllCounters();
                    ecoSmart.saveToLocalStorage();
                    showNotification('تم إعادة تعيين جميع العدادات!', 'success');
                }
            });
            
            // Clear activities button
            document.getElementById('clearActivitiesBtn').addEventListener('click', () => {
                if (confirm('هل أنت متأكد من مسح جميع النشاطات؟')) {
                    ecoSmart.clearActivities();
                    showNotification('تم مسح جميع النشاطات!', 'success');
                }
            });
            
            // ==================== Donation Form Functions ====================
            // Bottle count controls
            document.getElementById('increaseBottles').addEventListener('click', () => {
                const input = document.getElementById('bottlesCount');
                input.value = Math.min(1000, parseInt(input.value) + 1);
            });
            
            document.getElementById('decreaseBottles').addEventListener('click', () => {
                const input = document.getElementById('bottlesCount');
                input.value = Math.max(1, parseInt(input.value) - 1);
            });
            
            // Donation form submission
            document.getElementById('donationForm').addEventListener('submit', (e) => {
                e.preventDefault();
                
                const name = document.getElementById('donorName').value.trim();
                const phone = document.getElementById('donorPhone').value.trim();
                const bottles = parseInt(document.getElementById('bottlesCount').value);
                const type = document.getElementById('donationType').value;
                const message = document.getElementById('donationMessage').value.trim();
                
                if (!name || !phone || !type) {
                    showFormMessage('donationMessage', 'يرجى ملء جميع الحقول المطلوبة', 'error');
                    return;
                }
                
                // Add donation
                ecoSmart.addBottles(bottles, true);
                
                // Update donation type counters
                switch(type) {
                    case 'food':
                        ecoSmart.counters.foodDonations += bottles;
                        break;
                    case 'education':
                        ecoSmart.counters.eduDonations += bottles;
                        break;
                    case 'medical':
                        ecoSmart.counters.medicalDonations += bottles;
                        break;
                }
                
                // Save donation record
                ecoSmart.donations.push({
                    name,
                    phone,
                    bottles,
                    type,
                    message,
                    timestamp: new Date().toISOString()
                });
                
                // Update display
                ecoSmart.updateAllCounters();
                ecoSmart.saveToLocalStorage();
                
                // Show success message
                const trackingCode = 'DON-' + Date.now().toString().slice(-6);
                showFormMessage('donationMessage', 
                    `شكراً ${name}! تم تسجيل تبرعك بـ ${bottles} زجاجة. رقم التتبع: ${trackingCode}`, 
                    'success');
                
                // Reset form
                e.target.reset();
                document.getElementById('bottlesCount').value = 10;
            });
            
            // ==================== Contact Form Functions ====================
            document.getElementById('contactForm').addEventListener('submit', (e) => {
                e.preventDefault();
                
                const name = document.getElementById('contactName').value.trim();
                const email = document.getElementById('contactEmail').value.trim();
                const message = document.getElementById('contactMessage').value.trim();
                
                if (!name || !email || !message) {
                    showFormMessage('contactMessage', 'يرجى ملء جميع الحقول المطلوبة', 'error');
                    return;
                }
                
                // Save message
                ecoSmart.messages.push({
                    name,
                    email,
                    message,
                    timestamp: new Date().toISOString()
                });
                
                ecoSmart.saveToLocalStorage();
                
                // Show success message
                showFormMessage('contactMessage', 
                    `شكراً ${name}! تم إرسال رسالتك بنجاح. سنتواصل معك قريباً.`, 
                    'success');
                
                // Reset form
                e.target.reset();
            });
            
            // ==================== Video Player Functions ====================
            const video = document.getElementById('mainVideo');
            const videoOverlay = document.getElementById('videoOverlay');
            const playOverlayBtn = document.getElementById('playOverlayBtn');
            
            // Play button in overlay
            playOverlayBtn.addEventListener('click', () => {
                video.play();
                videoOverlay.classList.add('hidden');
            });
            
            // Video controls
            document.getElementById('videoPlayBtn').addEventListener('click', () => {
                video.play();
                videoOverlay.classList.add('hidden');
            });
            
            document.getElementById('videoPauseBtn').addEventListener('click', () => {
                video.pause();
            });
            
            let isMuted = false;
            document.getElementById('videoMuteBtn').addEventListener('click', () => {
                isMuted = !isMuted;
                video.muted = isMuted;
                document.getElementById('videoMuteBtn').innerHTML = 
                    isMuted ? '<i class="fas fa-volume-mute"></i> إلغاء كتم' : 
                    '<i class="fas fa-volume-up"></i> كتم';
            });
            
            // Click on video to toggle play/pause
            video.addEventListener('click', () => {
                if (video.paused) {
                    video.play();
                    videoOverlay.classList.add('hidden');
                } else {
                    video.pause();
                }
            });
            
            // ==================== Helper Functions ====================
            function showNotification(message, type = 'info') {
                // Create notification element
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.innerHTML = `
                    <div style="position:fixed; top:20px; left:20px; background:${type === 'success' ? 'linear-gradient(135deg, #00A86B, #00B4D8)' : 'linear-gradient(135deg, #FF6B6B, #FF9E00)'}; 
                         color:white; padding:15px 25px; border-radius:10px; box-shadow:0 5px 15px rgba(0,0,0,0.2); 
                         z-index:10000; animation:slideIn 0.3s ease;">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-info-circle'}"></i> ${message}
                    </div>
                `;
                
                document.body.appendChild(notification);
                
                // Remove after 3 seconds
                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }
            
            function showFormMessage(elementId, message, type) {
                const element = document.getElementById(elementId);
                element.className = `form-message ${type}`;
                element.innerHTML = message;
                
                // Clear after 5 seconds
                if (type === 'success') {
                    setTimeout(() => {
                        element.className = 'form-message';
                        element.innerHTML = '';
                    }, 5000);
                }
            }
            
            // Keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                // Space to play/pause video
                if (e.code === 'Space' && e.target === document.body) {
                    e.preventDefault();
                    if (video.paused) {
                        video.play();
                        videoOverlay.classList.add('hidden');
                    } else {
                        video.pause();
                    }
                }
                
                // R to reset counters
                if (e.code === 'KeyR' && e.ctrlKey) {
                    e.preventDefault();
                    document.getElementById('resetCountersBtn').click();
                }
                
                // D to add donation
                if (e.code === 'KeyD' && e.ctrlKey) {
                    e.preventDefault();
                    document.getElementById('addBottlesBtn').click();
                }
            });
            
            // Initialize last update time
            localStorage.setItem('lastUpdateTime', Math.floor(Date.now() / 1000));
            
            // Console greeting
            console.log('%c🌱 EcoSmart Recycle System', 'font-size: 20px; color: #00A86B; font-weight: bold;');
            console.log('%c🚀 Frontend with JavaScript Loaded Successfully!', 'color: #00B4D8;');
            console.log('%c📊 Features:', 'color: #FF9E00;');
            console.log('  • Live Counter System');
            console.log('  • Donation Management');
            console.log('  • Real-time Activity Feed');
            console.log('  • Video Player Controls');
            console.log('  • Local Storage Persistence');
            console.log('%c🔧 Keyboard Shortcuts:', 'color: #FF6B6B;');
            console.log('  • Space: Play/Pause Video');
            console.log('  • Ctrl+R: Reset Counters');
            console.log('  • Ctrl+D: Add Bottles');
        });
    </script>
</body>
</html>
